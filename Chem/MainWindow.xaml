<Controls:MetroWindow
		xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Chem.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Chem"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
	<!-- Righet top menu -->
	<Controls:MetroWindow.RightWindowCommands>
		<Controls:WindowCommands>
			<ToggleButton Content="Theme" IsChecked="{Binding ElementName=Theme, Path=IsOpen}"></ToggleButton>
		</Controls:WindowCommands>
	</Controls:MetroWindow.RightWindowCommands>

	<!-- Flyout Controls -->
	<Controls:MetroWindow.Flyouts>
		<Controls:FlyoutsControl>
			<!-- Theme -->
			<Controls:Flyout Header="Flyout" Position="Right" Width="200" x:Name="Theme" IsOpen="True">
				<!-- Your custom content here -->
			</Controls:Flyout>
		</Controls:FlyoutsControl>
	</Controls:MetroWindow.Flyouts>
	<Grid>

	</Grid>
	
</Controls:MetroWindow>
